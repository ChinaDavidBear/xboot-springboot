<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gengyu.modules.sys.dao.RoleDao">
    <sql id="BASE_COLUMN">
        a.id,
        a.create_by AS "createBy",
        a.create_time AS "createTime",
        a.del_flag AS "delFlag",
        a.update_by AS "updateBy",
        a.update_time AS "updateTime",
        a.name,
        a.default_role AS "defaultRole",
        a.description,
        a.data_type AS "dataType"
    </sql>
    <select id="findByDefaultRole" resultType="com.gengyu.modules.sys.entity.Role">
        select <include refid="BASE_COLUMN"/>
         from sys_role a where a.default_role=#{defaultRole}
    </select>
    <select id="get" resultType="com.gengyu.modules.sys.entity.Role">
        select <include refid="BASE_COLUMN"/> from sys_role a where a.id=#{id}
    </select>
    <select id="findList" resultType="com.gengyu.modules.sys.entity.Role">
        select <include refid="BASE_COLUMN"/>
        from sys_role a
        <where>
           <if test="name!=null and name!=''">
               a.name like concat('%',#{name},'%')
           </if>
        </where>
    </select>
    <delete id="delete" parameterType="java.lang.String">
        delete from sys_role where id=#{id}
    </delete>
    <update id="update" parameterType="com.gengyu.modules.sys.entity.Role">
        update sys_role
        <set>
            <trim suffixOverrides=",">
                <if test="name!=null and name!=''">
                    name=#{name},
                </if>
                <if test="description!=null and description!=''">
                    description=#{description},
                </if>
                <if test="defaultRole!=null">
                    default_role=#{defaultRole},
                </if>
            </trim>
        </set>
          <where>
              id=#{id}
          </where>
    </update>
    <insert id="insert" parameterType="com.gengyu.modules.sys.entity.Role">
        insert into sys_role(id,create_by,create_time,update_by,update_time,name,del_flag,default_role,description,data_type)
        values(#{id},#{createBy},#{createTime},#{updateBy},#{updateTime},#{name},#{delFlag},#{defaultRole},#{description},#{dataType})
    </insert>
</mapper>